<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.add.Directory_add">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        > <!-- Điều chỉnh khoảng cách marginBottom theo chiều cao của Navigation Bottom -->

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thêm thông tin đơn vị"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageViewLogoDonVi"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/roundimg" />

        <Button
            android:id="@+id/textViewOnImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thêm ảnh"
            android:textSize="16sp"
            android:background="#00FFFFFF"
            android:textColor="@color/primary_text"
            android:padding="4dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên đơn vị:"
            android:textStyle="bold"
            android:textSize="15sp"  />

        <EditText
            android:id="@+id/editTextTenDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên đơn vị" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email đơn vị:"
            android:textStyle="bold"
            android:textSize="15sp"  />
        <EditText
            android:id="@+id/editTextEmailDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website đơn vị:"
            android:textStyle="bold"
            android:textSize="15sp"  />
        <EditText
            android:id="@+id/editTextWebsiteDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Website" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Địa chỉ:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextDiaChiDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:textStyle="bold"
            android:textSize="15sp"  />
        <EditText
            android:id="@+id/editTextSdtDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mã đơn vị cha:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtMadvcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã đơn vị cha" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/buttonSaveDonvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm" />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btnbackDvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thoát" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
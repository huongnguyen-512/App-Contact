<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp đổ bóng -->
    <item>

        <shape android:shape="rectangle">

            <corners android:radius="5dp" /> <!-- Điều chỉnh giá trị radius theo ý muốn -->
            <solid android:color="#404C4C4C" /> <!-- Màu đổ bóng (đen với độ trong suốt 25%) -->
        </shape>
    </item>

    <!-- Lớp nền của EditText -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Điều chỉnh giá trị radius theo ý muốn -->
            <solid android:color="#F1F1F1" /> <!-- Màu nền của EditText -->
            <stroke
            android:width="1dp"
            android:color="#D6D6D6" /> <!-- Màu viền của EditText -->
        </shape>
    </item>

</layer-list>
